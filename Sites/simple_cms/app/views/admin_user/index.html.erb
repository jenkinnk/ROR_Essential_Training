<% @page_title = "Admin Users"%>
<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="admin user index">
  <h2>Admin Users</h2>
	<%= %>
  <%= link_to(image_tag('plus_sign.png', :size =>'11x11', :alt=>'+') + "Add New User", {:action => "new"}, :class => 'action new') %>
  
  <div><%= pluralize((@users.size), 'User') %> found</div>
  <table class="listing" summary="User list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd','even') %>">
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
	  <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {:action=>'edit', :id=>user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action=>'delete', :id=>user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

